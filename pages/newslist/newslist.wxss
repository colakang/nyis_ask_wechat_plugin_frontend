.banners {
  width: 100%;
  height: 400rpx;
}

.banner{
  position: relative;
}

.banner-image{
  width: 100%;
  height: 100%;
}

.banner-title{
  background-color: grey; 
  opacity:0.85;
  color: #fff; 
  position: absolute;
  width: 100%;
  padding-left: 16px;
  padding-right: 16px; 
  padding-top: 8px; 
  padding-bottom: 8px;
  bottom: 10px; 
  font-size: 16px;
   left: 0;
}

.sub-title{
  color: #76787e;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  width: 100%;
  font-size: 14px;
